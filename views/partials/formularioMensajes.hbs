<div class="divFormulario">
    <div class="formulario">
        <h2 class="emaill" id="{{email}}" value="dario@hotmail.com" class="formulario__titulo">CENTRO DE MENSAJES de
            {{email}}</h2>
        <form onsubmit="return addMensaje(this)">
            <br>
            <input class="form-control" type="text" id="nombre" name="nombre" placeholder="ingrese Nombre"
                required="required">
            <br>
            <input class="form-control" type="number" id="edad" name="edad" placeholder="edad" required="required">
            <br>
            <input class="form-control" type="text" id="alias" name="alias" placeholder="alias" required="required">
            <br>
            <input class="form-control" type="text" id="avatar" name="avatar" placeholder="avatar" required="required">
            <br>
            <input class="form-control" type="text" id="mensaje" name="mensaje" placeholder="Ingrese su consulta"
                required="required">
            <br>
            <input type="submit" class="btn btn-outline-success" value="Add mensaje!">
        </form>
    </div>
</div>